<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course Feeback"
        android:textColor="@color/KamalColor"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <RadioGroup
        android:id="@+id/rgFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/rbExcellent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="Excellent" />

        <RadioButton
            android:id="@+id/rbFantastic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="Fantastic" />

        <RadioButton
            android:id="@+id/rbSuperb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="Superb" />
    </RadioGroup>

    <CheckBox
        android:id="@+id/cbNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textSize="15sp"
        android:text="Notes" />

    <CheckBox
        android:id="@+id/cbCertificate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:text="Certificate" />

    <Button
        android:id="@+id/btnSubmit"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:background="@color/KamalColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberSigned" />

</LinearLayout>